<h2>Add a new car</h2>

<div class="row">
  <form class="col s12" action="/add-car" method="POST">
    <div class="row">
      <div class="input-field col s6">
        <input id="brand" name="brand" type="text" class="validate" required>
        <label for="brand">Brand</label>
        <span class="helper-text" data-error="Add brand name"></span>
      </div>
      <div class="input-field col s6">
        <input id="model" name="model" type="text" class="validate" required>
        <label for="model">Model</label>
        <span class="helper-text" data-error="Add model"></span>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="image" name="image" type="text" class="validate" required>
        <label for="image">Image</label>
        <span class="helper-text" data-error="Add image url"></span>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="description" name="description" type="text" class="validate" required>
        <label for="description">Description</label>
        <span class="helper-text" data-error="Add description"></span>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="email" name="email" type="email" class="validate" required>
        <label for="email">Email</label>
        <span class="helper-text" data-error="Enter email correct"></span>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        The car costs:
        <div class="input-field inline">
          <input id="email_inline" name="price" min="1" type="number" step="0.01" class="validate" required>
          <label for="email_inline">Price</label>
          <span class="helper-text" data-error="Enter price correct"></span>
        </div>
      </div>
    </div>

    <button class="btn btn-primary" type="submit">Add new car</button>
  </form>
</div>